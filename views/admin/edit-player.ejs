<h2 class="text-center mt-5">Add New Guitar Player</h2> 



<div class="container">
    <form action="/admin/edit/<%= player._id %>?_method=PUT" method="POST">
    <div class="row">
        <div class="col">
            <div class="mb-3">
                <label for="coverImage" class="form-label">Image</label>
                <input type="file" name="coverImage" class="filepond">
            </div>
        </div>
        <div class="col">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Name and Surname" value="<%= player.name %>">
                </div>
            
                <div class="mb-3">
                    <label for="nickName" class="form-label">Nick Name</label>
                    <input type="text" name="nickName" class="form-control" placeholder="Alias" value="<%= player.nickName %>">
                </div>
            
                <div class="mb-3">
                    <label for="bands" class="form-label">Bands</label>
                    <input type="text" name="bands" class="form-control" placeholder="Bands which palyed with" value="<%= player.bands %>">
                </div>
            
                <div class="container d-flex justify-content-evenly mb-3">
                    <div class="mb-3">
                        <label for="dateBorn" class="form-label">Date Born</label>
                        <input type="date" name="dateBorn" class="form-control" value="<%= player.dateBorn.toISOString().split("T")[0] %>">
                    </div>
                    <div class="mb-3">
                        <label for="dateDeath" class="form-label">Date Death *</label>
                        <input type="date" name="dateDeath" class="form-control" value="<%= player.dateDeath == null ? "" : player.dateDeath.toISOString().split("T")[0] %>">
                    </div>
                </div>
            
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="country" class="form-control" placeholder="country" value="<%= player.country %>">
                </div>            
                
        </div>
    </div>
    <div class="mb-6">
        <label for="content" class="form-label">Post</label>
        <textarea name="content" id="ckeditor" placeholder="About.." class="form-control"><%= player.content %></textarea>
    </div>
       
    <div class="mb-3">
        <input type="submit" class="btn btn-primary" value="Edit">
    </div>
</form>
</div>

<script>
    // Replace the <textarea id="editor1"> with a CKEditor 4
    // instance, using default configuration.
    CKEDITOR.replace( 'ckeditor', {
        "extraPlugins" : "imagebrowser",
        "imageBrowser_listUrl": "/files"
    } );
</script>